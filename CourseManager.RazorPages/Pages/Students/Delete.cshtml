@page "{id:int?}"
@model CourseManager.RazorPages.Pages.Students.Delete
@{
    ViewData["Title"] = "Delete";
}

<h1>@ViewData["Title"]</h1>

<div>
    <form method="post">
        <div class="remove">
            <p>
                <strong>Nome Student:</strong>
                @Model.Student!.StudentName
            </p>
            <p>
                <strong>Email:</strong>
                @Model.Student.Email
            </p>
            <p>
                <strong>Data:</strong>
                @Model.Student.EnrollmentDate
            </p>
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="Student!.StudentId" />
            <input type="submit" value="Excluir" class="btn btn-danger" />
            <a asp-page="/Students/View" class="btn btn-primary">Voltar</a>
        </div>
    </form>
</div>